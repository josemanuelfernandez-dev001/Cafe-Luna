extends layout

block content
  .error-page
    .error-container
      h1.error-code= error.status || 500
      h2.error-title= title || 'Error'
      p.error-message= message || 'Ha ocurrido un error'
      
      if process.env.NODE_ENV === 'development' && error.stack
        .error-stack
          h3 Stack Trace (solo en desarrollo):
          pre= error.stack
      
      .error-actions
        a.btn.btn-primary(href="/dashboard") üè† Volver al Dashboard
        a.btn.btn-secondary(href="/login") üîê Ir al Login

style.
  .error-page {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  .error-container {
    background: white;
    padding: 3rem;
    border-radius: 10px;
    text-align: center;
    max-width: 600px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
  }
  .error-code {
    font-size: 6rem;
    color: #667eea;
    margin: 0;
  }
  .error-title {
    color: #333;
    margin: 1rem 0;
  }
  .error-message {
    color: #666;
    margin: 1rem 0 2rem;
  }
  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }
  .error-stack {
    text-align: left;
    margin-top: 2rem;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 5px;
    overflow-x: auto;
  }
  .error-stack pre {
    margin: 0;
    font-size: 0.8rem;
  }
