          form#formUsuario
            .form-group
              label(for="nombre") Nombre *
              input#nombre.form-control(type="text", required)
            .form-group
              label(for="email") Email *
              input#email.form-control(type="email", required)
            .form-group
              label(for="password") ContraseÃ±a *
              input#password.form-control(type="password", required, minlength="6")
            .form-group
              label(for="rol") Rol *
              select#rol.form-control(required)
                option(value="barista") Barista
                option(value="cocina") Cocina
                option(value="mesero") Mesero
                option(value="admin") Administrador
            .form-group
              label(for="activo") Estado
              select#activo.form-control
                option(value="true", selected) Activo
                option(value="false") Inactivo
